<div class="bg-gray-800 text-white text-center py-20">
  <h1 class="text-5xl font-bold mb-4">
    Welcome to MyMusic Ecommerce Store
  </h1>
  <p class="text-xl mb-12">
    Your one stop shop for all your music needs!
  </p>
  <%= link_to "Shop Now", root_path,
        class: "inline-block bg-gray-500 hover:bg-gray-600 text-white font-bold py-4 px-8 rounded mt-4" %>
</div>

<!-- Grid of categories -->
<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-10 px-4 py-12">
  <% @main_categories.each do |category| %>
    <%= link_to category_path(category), class: "flex flex-col items-center bg-gray-700 p-4 rounded-lg hover:bg-gray-600 transition" do %>
      <div class="w-48 h-48 mb-4 overflow-hidden rounded">
        <% if category.image.present? %>
          <%= image_tag category.image, class: "w-full h-full object-cover" %>
        <% else %>
          <%= image_tag "http://via.placeholder.com/512", class: "w-full h-full object-cover" %>
        <% end %>
      </div>
      <h2 class="text-white font-medium text-lg text-center">
        <%= category.name %>
      </h2>
    <% end %>
  <% end %>
</div>
