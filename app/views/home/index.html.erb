<div class="bg-gray-800 text-white text-center py-20">
  <h1 class="text-5xl font-bold mb-4">
    Welcome to MyMusic Ecommerce Store
  </h1>
  <p class="text-xl mb-12">
    Your one stop shop for all your music needs!
  </p>
  <%= link_to "Shop Now", root_path,
        class: "inline-block bg-gray-500 hover:bg-gray-600 text-white font-bold py-4 px-8 rounded mt-4" %>
</div>

<!-- Grid of featured products -->
<div class="px-4 py-12">
  <h2 class="text-3xl font-bold text-center mb-8 text-white">Featured Products</h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-10">
    <% @products.each do |product| %>
      <div class="bg-gray-700 p-4 rounded-lg hover:bg-gray-600 transition flex flex-col">
        <div class="w-full h-48 mb-4 overflow-hidden rounded">
          <% if product.images.attached? %>
            <%= image_tag product.images.first.variant(:thumb), class: "w-full h-full object-cover" %>
          <% else %>
            <%= image_tag "http://via.placeholder.com/512", class: "w-full h-full object-cover" %>
          <% end %>
        </div>
        <h3 class="text-lg font-medium text-white text-center"><%= product.name %></h3>
        <p class="text-gray-300 text-center mt-2"><%= number_to_currency(product.price / 100.0) %></p>
        <div class="mt-4 text-center">
          <%= link_to "View Product", product_path(product), class: "inline-block bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Grid of categories -->
<div class="px-4 py-12">
  <h2 class="text-3xl font-bold text-center mb-8 text-white">Categories</h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-10">
    <% @main_categories.each do |category| %>
      <%= link_to category_path(category), class: "flex flex-col items-center bg-gray-700 p-4 rounded-lg hover:bg-gray-600 transition" do %>
        <div class="w-48 h-48 mb-4 overflow-hidden rounded">
          <% if category.image.attached? %>
            <%= image_tag category.image, class: "w-full h-full object-cover" %>
          <% else %>
            <%= image_tag "http://via.placeholder.com/512", class: "w-full h-full object-cover" %>
          <% end %>
        </div>
        <h2 class="text-white font-medium text-lg text-center">
          <%= category.name %>
        </h2>
      <% end %>
    <% end %>
  </div>
</div>

