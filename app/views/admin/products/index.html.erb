<% content_for :title, "Products" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Products</h1>
    <%= link_to "New product", new_admin_product_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div class="flex flex-col w-full">
  <div class="overflow-x-auto sm:mx-0.5 lg:mx-0.5">
    <div class ="py-2 inline-block min-w-full">
      <div class="overlow-x-auto">
        <table class="min-w-full overflow-x-scroll">
          <thead class="bg-white border-b">
            <tr>
              <th scope="col" class="test-sm font-medium text-gray-800 px-6 py-4 text-left">
              </th>
              <th scope="col" class="test-sm font-medium text-gray-800 px-6 py-4 text-left">
                Name
              </th>
              <th scope="col" class="test-sm font-medium text-gray-800 px-6 py-4 text-left">
                Description
              </th>
              <th scope="col" class="test-sm font-medium text-gray-800 px-6 py-4 text-left">
                Price
              </th>
            </tr>
          </thead>
          <tbody>
            <% @admin_products.each do |p|%>
            <tr class="bg-gray-50 border-b">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800 underline">
                <% if p.images.any? %>
                  <%= image_tag p.images.first.variant(:thumb).processed, class: "rounded", width: 50, height: 50 %>
                <% else %>
                <%= image_tag "https://via.placeholder.com/50", class: "rounded", width: 50, height: 50 %>
              <% end %>
            </td>
              <td class="px-6 py-4 whitespace-nowrap tex-sm font-medium text-gray-800 underline">
                <%= link_to p.name, edit_admin_product_path(p), class: "text-blue-500 hover:underline" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap tex-sm font-medium text-gray-800 underline">
                <%= p.description %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap tex-sm font-medium text-gray-800 underline">
                $<%= (p.price/100.0).to_s %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
