<h1>Manage Pages</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @pages.each do |page| %>
      <tr>
  <td>
    <%= link_to page.title, admin_page_path(page), class: "text-blue-600 hover:underline" %>
  </td>
  <td>
    <%= link_to "Edit", edit_admin_page_path(page), class: "text-green-600 hover:underline" %>
  </td>
  <td>
    <%= link_to "Delete",
            admin_page_path(page),
            data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
            class: "text-red-600 hover:underline" %>
  </td>
</tr>
    <% end %>
  </tbody>
</table>
