<% content_for :title, "Editing category" %>

<div class="md:w-2/3 w-full">
  <h1 class="text-4xl font-bold mb-6">Editing category</h1>

  <%= render "form", admin_category: @admin_category %>

  <div class="mt-6 flex flex-wrap gap-3">
    <!-- Show this category -->
    <%= link_to "Show this category",
                [:admin, @admin_category],
                class: "inline-block px-4 py-2 bg-gray-600 hover:bg-gray-500 text-white font-medium rounded-md text-center" %>

    <!-- Back to categories -->
    <%= link_to "Back to categories",
                admin_categories_path,
                class: "inline-block px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white font-medium rounded-md text-center" %>
  </div>
</div>
