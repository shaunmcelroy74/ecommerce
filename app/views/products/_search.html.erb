<%= form_with url: search_products_path, method: :get, local: true do |f| %>
  <div class="mb-4">
    <%= f.label :keyword, "Search Keyword:" %>
    <%= f.text_field :keyword, value: params[:keyword], class: "border p-2" %>
  </div>

  <div class="mb-4">
    <%= f.label :category_id, "Select a Category:" %>
    <%= f.select :category_id,
          options_for_select([["All Categories", ""]] + Category.order(:name).map { |c| [c.name, c.id] },
          params[:category_id]),
          {}, class: "border p-2" %>
  </div>

  <div class="mb-4">
    <%= f.submit "Search", class: "bg-blue-600 hover:bg-blue-500 text-white py-2 px-4 rounded" %>
  </div>
<% end %>
