<main class="pt-28 max-w-7xl mx-auto px-4">
  <h1 class="text-3xl font-bold">Product Show Page</h1>

  <div class="flex justify-center gap-20 py-10">
    <!-- Images gallery -->
    <div class="flex flex-wrap max-w-lg">
      <% @product.images.each do |image| %>
        <%= image_tag image, class: "w-auto h-64" %>
      <% end %>
    </div>

    <!-- Details & Add to Cart -->
    <div class="flex flex-col items-start max-w-sm space-y-6">
      <h1 class="font-bold text-4xl uppercase"><%= @product.name %></h1>
      <p class="text-2xl mt-4">$<%= number_to_currency(@product.price_cents / 100.0).delete("$") %></p>
      <p class="text-md py-4"><%= @product.description %></p>

      <!-- Rails-powered “Add to Cart” button -->
      <%= button_to "Add to Cart",
          cart_items_path(product_id: @product.id),
          method: :post,
          class: "bg-blue-600 hover:bg-blue-500 text-white font-medium px-5 py-3 rounded-md" %>
    </div>
  </div>
</main>
